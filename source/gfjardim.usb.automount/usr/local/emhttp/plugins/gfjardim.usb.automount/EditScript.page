  function setDefault(form) {
    form.elements['text'].value = <?=json_encode($default_text);?>;
  }

  function load(el) {
    $.get($( el ).val(),function(data){ $( 'textarea' ).val(data);});
  }

  function openFileBrowser(parent, dir) {
    p = $(parent);
    // Skip is fileTree is already open
    if ( p.next().hasClass('fileTree') ){return null;}
    // create a random id
    var r = Math.floor((Math.random()*1000)+1);
    // Add a new span and load fileTree
    p.after("<span id='fileTree"+r+"' class='fileTree'></span>");
    var el = $('#fileTree'+r);

    el.fileTree({
      root: dir,
      filter: 'sh',
      allowBrowsing : true
    },
    function(file) { p.val(file); closeFileBrowser(el); load(p)},
    function(folder) {});
    // Format fileTree according to parent position, height and width
    el.css({'left':p.position().left, 'top':( p.position().top + p.outerHeight() ), 'width':(p.width()+2) });
    // close if click elsewhere
    $(document).mouseup(function (e) { if (!el.is(e.target) && el.has(e.target).length === 0) { closeFileBrowser(el); }});
    // Open fileTree
    el.slideDown('fast');
  }

  function closeFileBrowser(el) {
    $( el ).slideUp('fast', function () {
      $(this).remove();
    });
  }




</script>