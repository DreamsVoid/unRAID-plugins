      });

      $.each(hovered, function(k,v){ if(v.length) { $(".tooltipster-box").find("#"+v).trigger("mouseenter");} });

    }, "json").always(function(data)
    {
      setTimeout("getPreclearFooter()", 5000);
    });
  }

